extends /base.pug
block head
  +css("/css/editable/index.css")
block body
  .w-1024.mx-auto.rwd.my-4.d-flex
    .m-2.mr-4
      .list-group
        .list-group-item(draggable="true") Item 1
        .list-group-item(draggable="true") Item 2
        .list-group-item(draggable="true") Item 3
        .list-group-item(draggable="true") Item 4
    .flex-grow-1
      div#root(containable)
        div#d1(editable)
          h3#h3 Caption
          div#d2(editable)
            p 
              span nested
              span.btn.btn-primary(editable="true") Hi
              span ditable
            div#d3(editable) nested ( lv2 )
        div(attrable="data-name",placeholder="") attrable
        img(ed-type="image")
        div(ed-type="image")
        div(ed-type="background")
        div(containable)
          div(resizable,draggable,editable) item 1
          div(resizable,draggable,editable) item 2
          div(resizable,draggable,editable) item 3

block script
  +script("js/editable/index.js")
  +script("js/editable/mod/contenteditable.js")
  +script("js/editable/mod/focalbox.js")
  +script("js/editable/mod/dragger.js")
  +script("js/editable/mod/plainpaste.js")
  +script("js/index.js")
